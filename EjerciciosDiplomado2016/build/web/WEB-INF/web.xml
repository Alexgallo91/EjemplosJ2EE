<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <resource-ref>
        <description>[descripci√≥n del datasource]</description>
        <res-ref-name>jdbc/postgresLocal</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    
    <servlet>
        <servlet-name>ServletConfigurator</servlet-name>
        <servlet-class>org.logicalcobwebs.proxool.configuration.ServletConfigurator</servlet-class> 
        <init-param>
            <param-name>propertyFile</param-name>            
            <param-value>WEB-INF/proxool.properties</param-value>
        </init-param> 
        <load-on-startup>0</load-on-startup>      
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LeeParametrosServlet</servlet-name>
        <servlet-class>diplomado2016.modulohtml.LeeParametrosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HolaMundoServlet</servlet-name>
        <servlet-class>diplomado2016.moduloservlets.HolaMundoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PruebaCicloDeVida</servlet-name>
        <servlet-class>diplomado2016.modulohtml.PruebaCicloDeVida</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ValidaUsuario</servlet-name>
        <servlet-class>diplomado2016.moduloservlets.sesiones.ValidaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>diplomado2016.moduloservlets.sesiones.Menu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaUsuarioSession</servlet-name>
        <servlet-class>diplomado2016.moduloservlets.sesiones.ValidaUsuarioSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuSession</servlet-name>
        <servlet-class>diplomado2016.moduloservlets.sesiones.MenuSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaFormularioServlet</servlet-name>
        <servlet-class>diplomado2016.modulohtml.ValidaFormularioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PruebaConexion</servlet-name>
        <servlet-class>diplomado2016.modulojdbc.PruebaConexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PruebaPoolConexion</servlet-name>
        <servlet-class>diplomado2016.modulojdbc.PruebaPoolConexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PruebaConexionProxool</servlet-name>
        <servlet-class>diplomado2016.modulojdbc.PruebaConexionProxool</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/AdminProxool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeeParametrosServlet</servlet-name>
        <url-pattern>/LeeParametros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HolaMundoServlet</servlet-name>
        <url-pattern>/holamundoservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PruebaCicloDeVida</servlet-name>
        <url-pattern>/PruebaCicloDeVida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaUsuario</servlet-name>
        <url-pattern>/ValidaUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/Menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaUsuarioSession</servlet-name>
        <url-pattern>/ValidaUsuarioSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuSession</servlet-name>
        <url-pattern>/MenuSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaFormularioServlet</servlet-name>
        <url-pattern>/ValidaFormulario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PruebaConexion</servlet-name>
        <url-pattern>/PruebaConexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PruebaPoolConexion</servlet-name>
        <url-pattern>/PruebaPoolConexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PruebaConexionProxool</servlet-name>
        <url-pattern>/PruebaConexionProxool</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>formulario.html</welcome-file>
    </welcome-file-list>
    
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>proxoolAdmin</web-resource-name>
            <url-pattern>/AdminProxool</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>   
        
        <web-resource-collection>
            <web-resource-name>proxoolAdmin</web-resource-name>
            <url-pattern>/AdminProxool</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>monitor</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>supervisor</realm-name>  
    </login-config>
    <security-role>
        <role-name>monitor</role-name>
    </security-role>	
</web-app>
